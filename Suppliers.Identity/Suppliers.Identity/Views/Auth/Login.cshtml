@model LoginViewModel

@{
    ViewData["Title"] = "Авторизация";
}

<div>
    <h4 style="padding: 20px 0 10px 20px">Вход в систему</h4>
    <hr />
    <div style="height: 80vh; display:flex; justify-content:center; align-items: center">
        <form asp-controller="Auth" asp-action="Login" method="post" style="min-width: 300px">
            <input type="hidden" asp-for="ReturnUrl" />
            <div class="form-group">
                <label asp-for="Username" class="control-label">Логин</label>
                <input asp-for="Username" class="form-control"/>
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label">Пароль</label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group my-2">
                <a asp-controller="Auth" asp-action="Register" asp-route-returnUrl="@Model.ReturnUrl">Регистрация</a>
            </div>
            <div class="form-group my-3">
                <button type="submit" class="btn btn-primary">Войти</button>
            </div>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        </form>
    </div>
</div>